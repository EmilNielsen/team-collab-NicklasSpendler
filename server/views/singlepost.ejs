<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
</head>

<body>
    <%- include('partials/header')%>
    <%- include('partials/underside-banner')%>

    <div class="wrapper">
        
        <% newsPosts.forEach(newsPost => { %>
            <div class="blog-post">
            <div class="blog-post__left">
                <a href="/game/<%- newsPost.gamename.replace(/ /g,"_").toLowerCase() %>" class="blog-post__gametitle"><%- newsPost.gamename%></a>
                <h1 class="blog-post__header"><%- newsPost.title%></h1>
                <p class="blog-post__postdate"><%- dateAndTime.format(newsPost.postTime, 'MMMM DD, YYYY HH:mm') %></p>
                <p class="blog-post__textcontent"><%- newsPost.description%></p>
        
                <a href="#" class="button button--gradient">Read More</a>
            </div>
            <div class="blog-post__right">
                <img class="blog-post__img" src="/img/news/<%- newsPost.img %>" alt="">
            </div>
        </div>
        
        <% }); %>
    </div>
    
        <%- include("partials/footer") %>
        <%- include('partials/scripts') %>
</body>

</html>
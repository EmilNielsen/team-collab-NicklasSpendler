<% newsPosts.forEach(newsPost => { %>
    
    <div class="blog-post">
    <div class="blog-post__left">
        <h1 class="blog-post__header"><%- newsPost.title%></h1>
        <p class="blog-post__textcontent"><%- newsPost.description%></p>

        <a href="#" class="button button--gradient">Read More</a>
    </div>
    <div class="blog-post__right">
        <img class="blog-post__img" src="/img/news/<%- newsPost.img %>" alt="">
    </div>
</div>

<% }); %>